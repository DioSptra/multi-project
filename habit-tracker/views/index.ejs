<!DOCTYPE html>
<html>
<head>
  <title>✅ Habit Tracker</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="container">
    <h1>My Daily Habits</h1>

    <form method="POST" action="/add">
      <input type="text" name="habit" placeholder="Masukkan kebiasaan baru..." required>
      <button type="submit">Tambah</button>
    </form>

    <ul>
      <% habits.forEach((habit, index) => { %>
        <li class="<%= habit.done ? 'done' : '' %>">
          <span><%= habit.name %></span>
          <form method="POST" action="/check" style="display:inline;">
            <input type="hidden" name="index" value="<%= index %>">
            <button type="submit"><%= habit.done ? "✅" : "☑️" %></button>
          </form>
        </li>
      <% }) %>
    </ul>
  </div>
</body>
</html>
